{
  "manifest_version": 3,
  "name": "hotstar Ad Skipper",
  "version": "1.1",
  "description": "Skips ads on hotstar by fast-forwarding ad videos",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.hotstar.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

