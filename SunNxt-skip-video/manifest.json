{
  "manifest_version": 3,
  "name": "SunNxt Ad Skipper",
  "version": "1.1",
  "description": "Skips ads on SunNxt by fast-forwarding ad videos",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["*://www.sunnxt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

